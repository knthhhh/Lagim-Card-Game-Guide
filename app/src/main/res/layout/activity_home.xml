<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@color/black"
    android:orientation="vertical"
    android:id="@+id/drawer_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_home"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="200dp"
                android:fontFamily="@font/lusitana"
                android:text="UNDERSTAND THE BATTLE\nMECHANICS TO SURVIVE"
                android:textAlignment="center"
                android:textColor="@color/cream"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/text1"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="30dp"
                android:onClick="Raiding"
                android:src="@drawable/bg_home_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/text1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="155dp"
                android:layout_marginTop="120dp"
                android:fontFamily="@font/lusitana"
                android:onClick="Raiding"
                android:text="Raiding"
                android:textColor="@color/cream"
                android:textSize="23sp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignTop="@id/text1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="80dp"
                android:onClick="Raiding"
                android:src="@drawable/img_home_raiding" />


            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/img1"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="30dp"
                android:onClick="Defending"
                android:src="@drawable/bg_home_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/img1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="155dp"
                android:layout_marginTop="140dp"
                android:fontFamily="@font/lusitana"
                android:onClick="Defending"
                android:text="Defending"
                android:textColor="@color/cream"
                android:textSize="23sp" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignTop="@id/img1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="85dp"
                android:onClick="Defending"
                android:src="@drawable/img_home_defending" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/img2"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="30dp"
                android:onClick="Dwellers"
                android:src="@drawable/bg_home_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/img2"
                android:layout_alignParentStart="true"
                android:layout_marginStart="155dp"
                android:layout_marginTop="140dp"
                android:fontFamily="@font/lusitana"
                android:onClick="Dwellers"
                android:text="Dwellers"
                android:textColor="@color/cream"
                android:textSize="23sp" />

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_alignTop="@id/img2"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="80dp"
                android:onClick="Dwellers"
                android:src="@drawable/img_home_dwellers" />

            <ImageView
                android:onClick="LagimLimit"
                android:id="@+id/img4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/img3"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="30dp"
                android:src="@drawable/bg_home_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/img3"
                android:layout_alignParentStart="true"
                android:layout_marginStart="155dp"
                android:layout_marginTop="140dp"
                android:fontFamily="@font/lusitana"
                android:onClick="LagimLimit"
                android:text="Lagim Limit"
                android:textColor="@color/cream"
                android:textSize="23sp" />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignTop="@id/img3"
                android:layout_alignParentStart="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="80dp"
                android:onClick="LagimLimit"
                android:src="@drawable/img_home_lagimlimit" />

            <ImageView
                android:onClick="TypesOfRaid"
                android:id="@+id/img5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/img4"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="30dp"
                android:src="@drawable/bg_home_btn" />

            <TextView
                android:onClick="TypesOfRaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/img4"
                android:layout_alignParentStart="true"
                android:layout_marginStart="155dp"
                android:layout_marginTop="140dp"
                android:text="Types of Raid"
                android:textColor="@color/cream"
                android:textSize="23sp"
                android:fontFamily="@font/lusitana"
                />


            <ImageView
                android:onClick="TypesOfRaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_home_typesofraid"
                android:layout_alignTop="@id/img4"
                android:layout_alignParentStart="true"
                android:layout_marginTop="88dp"
                android:layout_marginStart="20dp"
                />


            <ImageView
                android:onClick="TypesOfDefense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/img5"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="30dp"
                android:src="@drawable/bg_home_btn" />

            <TextView
                android:onClick="TypesOfDefense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/img5"
                android:layout_alignParentStart="true"
                android:layout_marginStart="155dp"
                android:layout_marginTop="140dp"
                android:fontFamily="@font/lusitana"
                android:text="Types of Defense"
                android:textColor="@color/cream"
                android:textSize="23sp" />


            <ImageView
                android:onClick="TypesOfDefense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/img5"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="95dp"
                android:src="@drawable/img_home_typesofdefense" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test"
                android:textColor="@color/black"
                android:layout_marginTop="1050dp"
                />

        </RelativeLayout>

    </ScrollView>




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_lagim_white" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:onClick="Menu"
            android:src="@drawable/ic_menu" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            app:itemIconTint="@drawable/selector"
            app:itemTextColor="@drawable/selector"
            app:menu="@menu/bottom_navigation"
            android:layout_alignParentBottom="true"
            />


    </RelativeLayout>



    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/gray">

        <include layout="@layout/navigation_drawer" />

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>
