<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Story"
    android:background="@color/black"
    android:id="@+id/drawer_layout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY"
                android:src="@drawable/bg_story1" />

            <LinearLayout
                android:id="@+id/buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="StoryToMechanics">

                    <TextView
                        android:id="@+id/Components"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/opensans"
                        android:text=" Mechanics "
                        android:textColor="@color/lightGray"
                        android:textSize="15sp"
                        tools:ignore="UsingOnClickInXml" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/CardAnatomy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/opensans"
                        android:gravity="center_horizontal"
                        android:text="          Story          "
                        android:textColor="@color/TextColor"
                        android:textSize="15sp"
                        tools:ignore="UsingOnClickInXml" />

                    <ImageView
                        android:id="@+id/indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/CardAnatomy"
                        android:layout_alignEnd="@id/CardAnatomy"
                        android:layout_alignBottom="@id/CardAnatomy"
                        android:layout_marginBottom="-5dp"
                        android:src="@drawable/story_indicator" />

                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/premisebg"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttons"
                android:layout_alignParentStart="true"
                android:layout_marginTop="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/bg_premise_title" />

            <TextView
                android:id="@+id/premise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/premisebg"
                android:layout_alignTop="@id/premisebg"
                android:layout_alignEnd="@id/premisebg"
                android:layout_alignBottom="@id/premisebg"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/oldstyle"
                android:gravity="center_vertical"
                android:text="The Premise"
                android:textColor="@color/cream"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/premisetext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/premise"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/lusitana"
                android:text="Ancient magic stirs within the forests of 17th century Philippines, awakening a host of dark forces that threaten nearby villages.\n\nMysterious objects known as Soul Coins grant a measure of control over the encroaching darkness – but only to those who possess them."
                android:textColor="@color/TextColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/premisetext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/premisetext1"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/lusitana"
                android:text="However, such darkness inevitably seeps into the hearts of men.\n\nBaryos quickly turn on each other, unleashing dark magic and foul creatures against their neighbors.\n\nAs each Baryo races to claim more Soul Coins, who will survive and forge a path towards the greater power hidden within the depths of  the forest."
                android:textColor="@color/TextColor"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/premisetext2"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY"
                android:src="@drawable/bg_story3" />

            <ImageView
                android:id="@+id/gamebg"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img2"
                android:layout_alignParentStart="true"
                android:layout_marginTop="-90dp"
                android:scaleType="fitXY"
                android:src="@drawable/bg_thegame_title" />

            <TextView
                android:id="@+id/game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/gamebg"
                android:layout_alignTop="@id/gamebg"
                android:layout_alignEnd="@id/gamebg"
                android:layout_alignBottom="@id/gamebg"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/oldstyle"
                android:gravity="center_vertical"
                android:text="The Game"
                android:textColor="@color/cream"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/gametext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/game"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/lusitana"
                android:text="LagimTM is a strategic card game for 2 to 6 players in which each player controls a Baryo and aims to build a Spirit Path into the Forest.\n\nAt the start of the game, each Baryo holds 3 Soul Coins. These coins serve as the Baryo’s life points in the game.\n\nIf your Baryo runs out of Soul Coins, you will be eliminated from the game.\n\nIn order to build a Spirit Path, you must steal Soul Coins from other Baryos and place them on your Spirit Path in the game board. You need 3 stolen Soul Coins to complete a path.\n\nDuring the game, players gather resources to build their Baryo’s defenses, capture Forest creatures and cursed items to use as weapons, and steal Soul Coins by raiding other Baryos."
                android:textColor="@color/TextColor"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/gametext"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-45dp"
                android:scaleType="fitXY"
                android:src="@drawable/bg_story4" />

            <ImageView
                android:id="@+id/goalbg"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img3"
                android:layout_alignParentStart="true"
                android:layout_marginTop="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/bg_thegoal_title" />

            <TextView
                android:id="@+id/goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/goalbg"
                android:layout_alignTop="@id/goalbg"
                android:layout_alignEnd="@id/goalbg"
                android:layout_alignBottom="@id/goalbg"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/oldstyle"
                android:gravity="center_vertical"
                android:text="The Goal"
                android:textColor="@color/cream"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/goaltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/goal"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/lusitana"
                android:text="Your goal is to claim the hidden power residing within the Forest. You must either build a Spirit Path by obtaining 3 Soul Coins from other Baryos or become the last surviving Baryo in the game."
                android:textColor="@color/TextColor"
                android:textSize="16sp"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/goaltext"
                android:layout_marginTop="100dp"/>

        </RelativeLayout>

    </ScrollView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_lagim_white" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent"
                    android:onClick="Menu"
                    android:src="@drawable/ic_menu" />

                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/bottom_navigation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/black"
                    app:itemIconTint="@drawable/selector"
                    app:itemTextColor="@drawable/selector"
                    app:menu="@menu/bottom_navigation" />


            </RelativeLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/gray">

        <include layout="@layout/navigation_drawer" />

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>