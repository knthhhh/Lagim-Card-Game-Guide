<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cards"
    android:background="@color/black"
    android:id="@+id/drawer_layout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UsingOnClickInXml">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/bg_cards" />

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ComponentText"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="150dp"
                android:fontFamily="@font/oldstyle"
                android:text="FOREST CARDS"
                android:textColor="@color/cream"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/lagimbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt1"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/bg_lagim_btn"
                android:background="@android:color/transparent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/lagimbtn"
                android:layout_alignTop="@id/lagimbtn"
                android:layout_alignBottom="@id/lagimbtn"
                android:layout_marginStart="65dp"
                android:fontFamily="@font/lusitana"
                android:gravity="center"
                android:text="LAGIM"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/hiwagabtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lagimbtn"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/bg_hiwaga_btn"
                android:background="@android:color/transparent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/hiwagabtn"
                android:layout_alignTop="@id/hiwagabtn"
                android:layout_alignBottom="@id/hiwagabtn"
                android:layout_marginStart="65dp"
                android:fontFamily="@font/lusitana"
                android:gravity="center"
                android:text="HIWAGA"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hiwagabtn"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/oldstyle"
                android:text="BARYO CARDS"
                android:textColor="@color/cream"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/lakasbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt2"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/bg_lakas_btn"
                android:background="@android:color/transparent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/lakasbtn"
                android:layout_alignTop="@id/lakasbtn"
                android:layout_alignBottom="@id/lakasbtn"
                android:layout_marginStart="65dp"
                android:fontFamily="@font/lusitana"
                android:gravity="center"
                android:text="LAKAS"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/kontrabtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lakasbtn"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/bg_kontra_btn"
                android:background="@android:color/transparent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/kontrabtn"
                android:layout_alignTop="@id/kontrabtn"
                android:layout_alignBottom="@id/kontrabtn"
                android:layout_marginStart="65dp"
                android:fontFamily="@font/lusitana"
                android:gravity="center"
                android:text="KONTRA"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/kontrabtn"
                android:layout_marginTop="100dp"
                android:text=""/>

        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_lagim_white" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:onClick="Menu"
            android:src="@drawable/ic_menu" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/black"
            app:itemIconTint="@drawable/selector"
            app:itemTextColor="@drawable/selector"
            app:menu="@menu/bottom_navigation" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/gray">

        <include layout="@layout/navigation_drawer" />

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>